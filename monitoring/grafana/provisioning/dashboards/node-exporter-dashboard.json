{
  "id": null,
  "uid": "node-exporter-system",
  "title": "System Monitoring - Node Exporter",
  "tags": ["node-exporter", "system", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "type": "stat",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 60, "color": "yellow" },
              { "value": 80, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "type": "stat",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "100 * (1 - ((node_memory_MemAvailable_bytes or node_memory_MemFree_bytes) / node_memory_MemTotal_bytes))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "type": "stat",
      "title": "Disk Usage",
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 75, "color": "yellow" },
              { "value": 90, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "type": "stat",
      "title": "System Uptime",
      "targets": [
        {
          "expr": "node_time_seconds - node_boot_time_seconds",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "type": "graph",
      "title": "CPU Usage Over Time",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A",
          "legendFormat": "CPU Usage"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU %"
        }
      ]
    },
    {
      "id": 6,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "type": "graph",
      "title": "Memory Usage Over Time",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "refId": "A",
          "legendFormat": "Used Memory"
        },
        {
          "expr": "node_memory_MemTotal_bytes",
          "refId": "B",
          "legendFormat": "Total Memory"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory"
        }
      ]
    },
    {
      "id": 7,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "type": "graph",
      "title": "Network Traffic",
      "targets": [
        {
          "expr": "irate(node_network_receive_bytes_total[5m])",
          "refId": "A",
          "legendFormat": "Received - {{device}}"
        },
        {
          "expr": "irate(node_network_transmit_bytes_total[5m])",
          "refId": "B",
          "legendFormat": "Transmitted - {{device}}"
        }
      ],
      "yaxes": [
        {
          "format": "Bps",
          "label": "Bytes/sec"
        }
      ]
    },
    {
      "id": 8,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "type": "graph",
      "title": "Disk I/O",
      "targets": [
        {
          "expr": "irate(node_disk_read_bytes_total[5m])",
          "refId": "A",
          "legendFormat": "Read - {{device}}"
        },
        {
          "expr": "irate(node_disk_written_bytes_total[5m])",
          "refId": "B",
          "legendFormat": "Write - {{device}}"
        }
      ],
      "yaxes": [
        {
          "format": "Bps",
          "label": "Bytes/sec"
        }
      ]
    },
    {
      "id": 9,
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 22 },
      "type": "stat",
      "title": "Load Average (1m)",
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 2, "color": "yellow" },
              { "value": 4, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 22 },
      "type": "stat",
      "title": "Open File Descriptors",
      "targets": [
        {
          "expr": "node_filefd_allocated",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 10000, "color": "yellow" },
              { "value": 50000, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 22 },
      "type": "stat",
      "title": "Network Connections",
      "targets": [
        {
          "expr": "node_netstat_Tcp_CurrEstab",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          }
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  }
}
